  },
  newYork: {
    viewBox: '0 0 24 24',
    // Pizza slice icon
    path: '<path fill="currentColor" d="M12 2C8.43 2 5.23 3.54 3 6.04L12 22l9-15.96C18.77 3.54 15.57 2 12 2zm0 4c1.1 0 2 .9 2 2s-.9 2-2 2-2-.9-2-2 .9-2 2-2zm-3 6c-.55 0-1-.45-1-1s.45-1 1-1 1 .45 1 1-.45 1-1 1zm5 2c-.55 0-1-.45-1-1s.45-1 1-1 1 .45 1 1-.45 1-1 1z"/>'
  },
  detroit: {
    viewBox: '0 0 24 24',
    // Rectangle pan icon
