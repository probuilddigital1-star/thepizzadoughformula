  },
  thinCrispy: {
    viewBox: '0 0 24 24',
    // Thin crispy disc icon
    path: '<path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm0-14c-3.31 0-6 2.69-6 6s2.69 6 6 6 6-2.69 6-6-2.69-6-6-6z"/>'
  },
  poolishBiga: {
    viewBox: '0 0 24 24',
    // Clock/time icon for long fermentation
    path: '<path fill="currentColor" d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10 10-4.5 10-10S17.5 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.2 3.2.8-1.3-4.5-2.7V7z"/>'
  },
  emergency: {
    viewBox: '0 0 24 24',
    // Lightning bolt for quick/emergency
    path: '<path fill="currentColor" d="M7 2v11h3v9l7-12h-4l4-8z"/>'
  },
  custom: {
    viewBox: '0 0 24 24',
    // Settings/sliders icon
    path: '<path fill="currentColor" d="M3 17v2h6v-2H3zM3 5v2h10V5H3zm10 16v-2h8v-2h-8v-2h-2v6h2zM7 9v2H3v2h4v2h2V9H7zm14 4v-2H11v2h10zm-6-4h2V7h4V5h-4V3h-2v6z"/>'
  }
};

const icon = icons[name] || icons.custom;
---

<svg
  class:list={["flex-shrink-0", className]}
  viewBox={icon.viewBox}
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  aria-hidden="true"
  set:html={icon.path}
/>
